@model Lubes.Models.Submited_stock

@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="w3-card">
    <header class="w3-container bg-light  ">
        <table class="table">
            <tr>
                <td><h6> <i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;&nbsp;|&nbsp;&nbsp;     Daily reports</h6></td>
                <td class="text-right"> <h4> <span class="badge badge-pill badge-dark">Cash made&nbsp;&nbsp;@ViewBag.CashTotals </span></h4></td>
              
        </table>
                
    </header>

</div>



<hr />
<div class="w3-card bg-info" >
    <header class="w3-container bg-light  " style="padding:10px;">
        <table class="table">
            <tr>
                <th>Color</th>
                <th>Indicator</th>
            </tr>
            <tr>

                <td>
                    <span class="badge badge-pill badge-dark"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>
                </td>
                <td>
                    Item name
                </td>
            </tr>
            <tr>

                <td>
                    <span class="badge badge-pill badge-info"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>
                </td>
                <td>
                    Item(s) sold
                </td>
            </tr>
            <tr>

                <td>
                    <span class="badge badge-pill badge-success"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>
                </td>
                <td>
                    Cash made
                </td>
            </tr>
            <tr>

                <td>
                    <span class="badge badge-pill badge-danger"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; </span>
                </td>
                <td>
                    Current stock
                </td>
            </tr>
        </table>

        @if (ViewBag.JoinList != null)
        {
    <div class="row" style="font-size:13px;margin-top:10px;">
        <table class="table">
            <tr>
                <td colspan="2" class="text-center"><h3>Todays stock</h3></td>
            </tr>
            </table>
    </div>
    
                @foreach (var item in ViewBag.JoinList)
                {
                    <div class="row" style="font-size:13px;margin-top:10px;">
                        <div class="col-lg-1 col-2">
                            <img class="rounded-circle" src="/@item.ImageURL" style="height:30px;width:30px;border:1px solid black" alt="Card image">
                        </div>
                        <div class="col-lg-1 col-1">
                            |
                        </div>
                        <div class="col-lg-2 col-2">

                            <span class="badge badge-pill badge-dark"> @item.Item_name</span>

                        </div>
                        <div class="col-lg-2 col-2">

                            <span class="badge badge-pill badge-info">   @item.item_sold</span>

                        </div>
                        <div class="col-lg-2  col-2">

                            <span class="badge badge-pill badge-success">   @item.Cash_made</span>

                        </div>
                        <div class="col-lg-2  col-2">
                            <span class="badge badge-pill badge-danger">
                                @item.Quantity
                            </span>

                        </div>
                    </div>





                }

                }
                else
                {
                }


        </header>

</div>

<div class="w3-card" style="margin-top:10px;">
    <header class="w3-container bg-light text-light" style="padding:10px;">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card">
                    <div class="card-header bg-dark">
                        <div class="row">
                            <div class="col-lg-6">

                                Search records
                            </div>
                            <div class="col-lg-6">
                                <form method="post" enctype="multipart/form-data" asp-controller="Add_item" asp-action="Reports">
                                    <div class="input-group mb-3">
                                        <input asp-for="DateTime" asp-format="{yyyy-MM-dd}" tabindex=17 name="date" class="form-control">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="submit">Seach &nbsp;<i class="fa fa-search" aria-hidden="true"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-center">

                                @if (ViewBag.count != null)
                                { 
                                <h5>Date:&nbsp;&nbsp;@ViewBag.currentDate</h5>
                                <h5>Records found:&nbsp;&nbsp;@ViewBag.count</h5>
                                <h5>Cash made:&nbsp;&nbsp;@ViewBag.total1</h5>
                                
                                }
                                </div>
                            </div>
                            </div>

                        </div>




                    </div>
        </div>

        @if (ViewBag.JoinList1 != null)
        {

            @foreach (var item in ViewBag.JoinList1)
            {
                <div class="row" style="font-size:13px;margin-top:10px;">

                    <div class="col-lg-1 col-2">

                        <img class="rounded-circle" src="/@item.ImageURL" style="height:30px;width:30px;border:1px solid black" alt="Card image">

                    </div>
                    <div class="col-lg-1 col-1">
                        |
                    </div>
                    <div class="col-lg-2 col-2">

                        <span class="badge badge-pill badge-dark"> @item.Item_name</span>

                    </div>
                    <div class="col-lg-2 col-2">

                        <span class="badge badge-pill badge-info">   @item.item_sold</span>

                    </div>
                    <div class="col-lg-2  col-2">

                        <span class="badge badge-pill badge-success">   @item.Cash_made</span>

                    </div>
                    <div class="col-lg-2  col-2">
                        <span class="badge badge-pill badge-danger">
                            @item.Quantity
                        </span>

                    </div>
                </div>





            }

        }
        else
        {
            <div class="row" style="font-size:13px;margin-top:10px;">
                <table class="table">
                    <tr>
                        <td colspan="2" class="text-center"><h3>No records found</h3></td>

                    </tr>
                </table>
            </div>
        }
    </header>
</div>