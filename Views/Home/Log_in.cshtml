@model Lubes.Models.c_Users
@{
    ViewData["Title"] = "Home Page";
}
<div style="margin-top:20px;margin-bottom:20px;">
  
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post, new { role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                        <div class="card-body">
                                            <form class="text-center">
                                                <div class="form-group">

                                                    <label asp-for="strUserId" class="control-label"></label>
                                                    @Html.TextBoxFor(m => m.strUserId, new { @class = "form-control py-4", @placeholder = "Email" })
                                                    <span asp-validation-for="strUserId" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="strPassword" class="control-label"></label>
                                                    @Html.PasswordFor(m => m.strPassword, new { @class = "form-control py-4", @placeholder = "Password" })
                                                    <span asp-validation-for="strPassword" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    
                                                </div>
                                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                                    
                                                    <button type="submit" class="btn btn-primary" href="index.html">Login</button>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="card-footer text-center">
                                            <div class="small">  <label class="text-danger">@TempData["Error"]</label></div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </main>
            </div>
           
        </div>
       
 


</div>

<!-- Button trigger modal -->
