@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lubricants</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome-4.7.0_1/font-awesome-4.7.0/css/font-awesome.min.css" asp-append-version="true">
    <link href="~/css/cards.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="~/css/site.css" rel="stylesheet" />


    @*<link rel="stylesheet" href="~/css/site.css" />*@
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  box-shadow mb-3" style="        border: none;
        background-color: #68213A;">

            <div class="container " style="border:none">
                <img src="/SystemImage/logo.png" class="logo1" alt="" />

                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">&nbsp;Fuela</a>
                <button class="navbar-toggler text-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
                    @{ 
                        var x = Context.Session.GetString("Username");

                    @if (x != null)
                    {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Administration" asp-action="Dashboard"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> &nbsp;Fuel module</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Administration" asp-action="Dashboard"><i class="fa fa-home" aria-hidden="true"></i> &nbsp;Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="AddUsers"><i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp;Add users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Item_category" asp-action="Create"><i class="fa fa-sitemap" aria-hidden="true"></i> &nbsp;Add category</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Add_item" asp-action="create"><i class="fa fa-cart-plus" aria-hidden="true"></i> &nbsp;Add item</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Add_item" asp-action="SubmitStock"><i class="fa fa-check" aria-hidden="true"></i> &nbsp;Close stock</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Add_item" asp-action="Reports"><i class="fa fa-list-ul" aria-hidden="true"></i> &nbsp;Reports</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">

                                @TempData["Error"]
                            </li>
                        }
                        else
                        {

                        }
                    </ul>
                        } }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid " style="border:none;margin-bottom:100px;">
        <div class="row">
          
            <div class="col-lg-12 ">
                @RenderBody()
            </div>
        </div>
        </div>
       


    <footer class="footer  text-center text-light" style="        border: none;
        background-color: #68213A
">

        <img src="/SystemImage/logolubee.png" style="width:30px;width:30px;font-family:best;margin-right:10px;" alt="" /> &copy; @DateTime.Now.Year - Lubricants - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Context.Session.GetString("Username")</a>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Scripts1", required: false)
    @RenderSection("scripts3", required: false)
</body>
</html>
