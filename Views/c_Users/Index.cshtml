@model IEnumerable<Lubes.Models.c_Users>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Full_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Full_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strPassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strRole)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.strUserId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.strUserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.strUserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
